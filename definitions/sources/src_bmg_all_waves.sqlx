config {
  type: "view",
}

SELECT 
    LOWER(REGEXP_REPLACE(
        REGEXP_REPLACE(_TABLE_SUFFIX, r'_', ' '),  -- Replace underscores with spaces
        r'(\d+)', 
        r'wave \1'  -- Add "wave " before numbers
    )) AS wave_name,
    *
FROM `govuk-polling.govuk_polling_responses.src_bmg_wave_*`

